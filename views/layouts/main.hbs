<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <!-- Link to your CSS files, Bootstrap, or other stylesheets -->
    <link rel="stylesheet" href="public/style.css">
</head>
<body>
    <header>
        <!-- Your navigation bar goes here -->
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                {{#if loggedIn}}
                <li><a href="/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
                {{else}}
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Signup</a></li>
                {{/if}}
            </ul>
        </nav>
    </header>
    
    <main>
        {{{body}}}
    </main>
    
    <footer>
        <p>&copy; 2024 PluggedIn</p>
    </footer>
    
<script>
document.addEventListener('DOMContentLoaded', () => {
    // References to elements on the signup page
    const signupForm = document.getElementById('signup-form');
    const usernameSignup = document.getElementById('username-signup');
    const emailSignup = document.getElementById('email-signup');
    const passwordSignup = document.getElementById('password-signup');

    // Event listener for signup form submission
    signupForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        const username = usernameSignup.value.trim();
        const email = emailSignup.value.trim();
        const password = passwordSignup.value.trim();
    
        if (username && email && password) {
            const response = await fetch('/api/users', {
                method: 'POST',
                body: JSON.stringify({ username, email, password }),
                headers: { 'Content-Type': 'application/json' },
            });
        
            if (response.ok) {
                // Redirect to homepage page after successful signup
                document.location.replace('/homepage');
            } else {
                alert('Failed to sign up.');
            }
        }
    });
});
</script>
